{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Paciente list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Telefono</th>
                <th>Tratamiento</th>
                <th>Comentarios</th>
                <th>Edad</th>
                <th>Idpaciente</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('paciente_show', { 'id': entity.idpaciente }) }}">{{ entity.nombre }}</a></td>
                <td>{{ entity.telefono }}</td>
                <td>{{ entity.tratamiento }}</td>
                <td>{{ entity.comentarios }}</td>
                <td>{{ entity.edad }}</td>
                <td>{{ entity.idpaciente }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('paciente_show', { 'id': entity.idpaciente }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('paciente_edit', { 'id': entity.idpaciente }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('paciente_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
